{
    "id": "http://httpdd.hyperrest.com/schemata/fsm",
    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "array",
    "additionalItems": {
        "$ref": "#/definitions/state"
    },

    "definitions": {
        "position": {
            "title": "Column and row position on the HTTP decision diagram",
            "type": "string",
            "pattern": "/[A-Z][0-9]+/"
        },

        "status": {
            "title": "HTTP status",
            "type": "number",
            "minimum": 100,
            "maximum": 599,
            "multipleOf": 1
        },

        "stateID": {
            "title": "State ID",
            "type": "string",
            "minLength": 1,
            "enum": [
                "block_accept",
                "has_accept",
                "accept_matches",
                "has_accept_matches",
                "accept_language_matches",
                "has_accept_charset",
                "accept_charset_matches",
                "has_accept_encoding",
                "accept_encoding_matches",
                "ignore_accept_block_mismatches"
            ]
        },

        "state": {
            "title": "State",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/stateID"
                },
                "isBlock": {
                    "title": "Is block?",
                    "type": "boolean",
                    "default": "false"
                },
                "pos": {
                    "$ref": "#/definitions/position"
                },
                "callbackAlias": {
                    "title": "Callback alias",
                    "description": "On enter run a callback named differently than the state",
                    "type": "string",
                    "enum": [
                    ]
                },
                "on": {
                    "title": "Transitions",
                    "type": {
                        "type": "array",
                        "additionalProperties": {
                            "$ref": "#/definitions/transition"
                        }
                    }
                }
            },
            "required": [
                "id",
                "on"
            ]
        },

        "transition": {
            "title": "Transition",
            "type": "object",
            "properties": {
                "to": {
                    "$ref": "#/definitions/stateID"
                },
                "status": {
                    "$ref": "#/definitions/status"
                },
                "pos": {
                    "$ref": "#/definitions/position"
                }
            },
            "required": [
                "to"
            ]
        }
    }
}
